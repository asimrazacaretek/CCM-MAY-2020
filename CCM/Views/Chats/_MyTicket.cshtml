@model CCM.Models.AssigneeTicketViewModel
@using Microsoft.AspNet.Identity
@using CCM.Models;
@using CCM.Models.ENUMS_;
<style>
    .custom-imagebox {
        overflow: auto;
    }




    .CommentPartialView {
        overflow-y: auto !important;
    }

    .modal-img {
        padding-bottom: 18px;
        border-bottom: 8px solid;

@model CCM.Models.TicketGeneration

@using (Html.BeginForm("AdminTicketGeneration", "Chats", FormMethod.Post, new { @id = "AdminTicketGenerationForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.Id)
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (Model?.Id > 0)
    {
        <div class="form-group">
            @Html.Label("Ticket Subject", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.subjectName, new { @required = "required", @placeholder = "Ticket Subject", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.subjectName, "", new { @class = "text-danger", @id = "subjectvalidation" })
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            @Html.Label("Ticket Subject", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.subjectName, new { htmlAttributes = new {@id= "subjectName2", @required = "required", @placeholder = "Ticket Subject", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.subjectName, "", new { @class = "text-danger", @id = "subjectvalidation" })
            </div>
        </div>
    }

    <div class="form-group">
        <div class=" col-md-12 text-right" style="right:45px;">
            @if (Model?.Id > 0)
            {
                <input style="margin-left: 5px;" id="ticketCreateButton" type="button" onclick="SubmitForm('AdminTicketGenerationForm')" value="Save" class="btn" />
            }
            else
            {
                <input style="margin-left: 5px;" id="ticketCreateButton" type="button" onclick="SubmitForm('AdminTicketGenerationForm')" value="Create" class="btn" />
            }

            @*<input  type="reset" class="pull-left btn btn-default" />*@

            <button type="button" class=" btn btn-default close-custom-button" data-dismiss="modal">Close</button>


        </div>
    </div>
</div>
}
<script>
    $(document).ready(function () {
       
        $("#DropDownAssignee").val("");
        $("#TypeId").val("");
        $("#StatusId").val("");
    })
    $('.close-custom-button').click(function () {
        debugger;
        $('#modal-container').addClass('out');
        $('body').removeClass('modal-active');
    });
</script>
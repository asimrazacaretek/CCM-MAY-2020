@model List<CCM.Models.TicketComment>
  @using CCM.Helpers
@using CCM.Models
@{
        UserTicketGeneration CreatorNote = new UserTicketGeneration();
    if (Model.Count != 0)
    {
        CreatorNote = Model.Select(x => x.UserTicketGeneration).FirstOrDefault();
    }
    else
    {
        CreatorNote = ViewBag.UserTicketGenId;
    }
    }
@if (Model != null)
{
    <table id="allassociatedcomments" style="text-align:center">
        <thead>
            <tr>
                <th style="width:61%;text-align:left!important ">
                    Note
                </th>
                <th style="width:10%">
                    Created By
                </th>
                <th style="width:16%">
                    Created Date
                </th>
            </tr>
        </thead>
        <tbody>
            @if (CreatorNote != null)
            {
            <tr>
                <td style="text-align:left">
                    @CreatorNote.creatorNotes
                </td>
                <td>
                    @HelperExtensions.GetUserNamebyID(CreatorNote.createdBy)
                </td>
                <td>
                    @CreatorNote.createdDate
                </td>
            </tr>

            }
            <tr>
                
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td  style="text-align:left">
                    @item.noteText
                </td>
                <td>
                    @HelperExtensions.GetUserNamebyID(item.createdBy)
                </td>
                <td>
                    @item.createdDate
                </td>
            </tr>
            }
        </tbody>
    </table>
    
}
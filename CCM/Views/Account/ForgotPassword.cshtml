@model CCM.Models.ForgotPasswordViewModel
        

<style>
    .newPassword {
        margin-top: 6px;
        font-size: 88px;
        margin-left: 4px;
    }
</style>
@if (ViewBag.Message != null)
{<div class="newPassword">
    <p style="font-size:21px" >New Password is <b> @ViewBag.Message</b></p>
</div>
    }

    <h3>Reset Password</h3>

<br/>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Enter your email address.</h4>

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-input" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <input type="submit" class="btn btn-success" value="Reset to Default Passowrd" />
        </div>
    </div>
    <br/><br/><br/>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
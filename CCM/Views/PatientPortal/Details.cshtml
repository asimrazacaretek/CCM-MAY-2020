            <dt>
                @Html.DisplayNameFor(model => model.OtherInsuranceIdNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OtherInsuranceIdNumber)
            </dd>                     
        </dl>
    </div>

    <div class="col-sm-6">
        <div class="row">
            <h3>Send a message to your pharmacist.</h3><hr />
            <div id="sendMessage">
                Please Wait..... <img src="https://stubwire-public.storage.googleapis.com/website/stubwire_v3/images/loading.gif" alt="" />
            </div>
        </div>

        @if (ViewBag.MessagesCount > 0)
        {
            <br />
            <div class="row">
                <h3>Your Messages</h3>
                <div id="viewMessages">
                    Please Wait..... <img src="https://stubwire-public.storage.googleapis.com/website/stubwire_v3/images/loading.gif" alt="" />
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">
        $(document).ready(function() {
            $("#sendMessage").load('/MessageNotifications/_NewMessagePartial');
        });
    </script>

    @if (ViewBag.MessagesCount > 0)
    {
        <script type="text/javascript">
            $(document).ready(function() {
                $("#viewMessages").load('/MessageNotifications/_MessagesPartial', { patientId: @Model.Id });
            });
        </script>
    }
}
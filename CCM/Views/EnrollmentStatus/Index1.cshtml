                }, "dom": 'Blfrtip',
                lengthMenu: [
                    [10, 25, 50, -1],
                    ['10 rows', '25 rows', '50 rows', 'Show all']
                ],

                buttons: ['print', {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: ("thead th:not(.noExport)", ':visible')
                    }
                }
                    , {
                        extend: 'pdfHtml5',
                        orientation: 'landscape',
                        pageSize: 'LEGAL',
                        exportOptions: {

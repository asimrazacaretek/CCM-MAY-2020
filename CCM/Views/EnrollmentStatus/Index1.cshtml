            var UserRolestr = "@ViewBag.UserRole";
            var DateStr = "@ViewBag.DateStr";
            var statusstr = "@ViewBag.SubStatus";
            var urltobesend = "/EnrollmentStatus/LoadDrugData?status=" + status + "&userId=" + User + "&date1=" + DateStr + "&substatus=" + statusstr;

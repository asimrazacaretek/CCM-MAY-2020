    function loadquestions() {
        $(".loader").show();
        $.ajax({
            type: "POST",
            url: "/Survey/SurveyQuestionMappings",
            data: {
                'SurveryId': $("#ddlSurveryName").val(), 'SectionId': $("#ddlSurverySections").val(), 'SurveryTypeId': $("#ddlSurveryType").val()

@model CCM.Models.Physician

<link href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet" />

<h3>Physician: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
Member Since: @Html.DisplayFor(model => model.CreatedOn) <br />
Office Phone Number: @Html.DisplayFor(model => model.MainPhoneNumber)<br />
Mobile Phone Number: @Html.DisplayFor(model => model.MobilePhoneNumber)<br />
Email Address: @Html.DisplayFor(model => model.Email)<br />
Address: @Html.DisplayFor(model => model.Address1)
@Html.DisplayFor(model => model.Address2)
@Html.DisplayFor(model => model.City)
@Html.DisplayFor(model => model.Zipcode)
<hr />

@if (ViewBag.PatientsCount > 0)
{
    <div class="row">
        <div class="col-md-5">
            <h3 class="pageTitle">Patients:</h3>
            Click anywhere inside a row to view patient details.
            
            <hr />
            <div id="divPatients">
                Please Wait..... <img src="https://stubwire-public.storage.googleapis.com/website/stubwire_v3/images/loading.gif" alt="" />
            </div>
        </div>

        <div class="col-md-7">
            <div id="divProcessing">
                <p>
                    Processing, please wait . . . <img src="https://stubwire-public.storage.googleapis.com/website/stubwire_v3/images/loading.gif" alt="" />
                </p>
            </div>
            <div id="divDetails"></div>
        </div>
    </div>

    <br/><br/>
    <div id="divCallProcessing">
        <p>
            Processing, please wait . . . <img src="https://stubwire-public.storage.googleapis.com/website/stubwire_v3/images/loading.gif" alt="" />
        </p>
    </div>
    
    <div id="divCallHistory">
        <div id="callHistoryPartial"></div>
    </div>

    @section Scripts {
        <script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js" type="text/javascript"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                $('#divProcessing').hide();
                $('#divCallProcessing').hide();
                $('#divCallHistory').hide();

                $("#divPatients").load('/PhysicianPortal/_PatientsPartial',  { physicianId: @Model.Id });
            });
        </script>
    }
}

else
{ <h3 class="text-warning">You do not have any patients, yet.</h3> }
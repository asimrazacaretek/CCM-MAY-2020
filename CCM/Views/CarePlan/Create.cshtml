                            @Html.TextAreaFor(model => model.HPI, new { @class = "form-control border-input", rows = "5" })
                            @Html.ValidationMessageFor(model => model.HPI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Plan, "Care Plan Objective", htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.Plan, new { @class = "form-control border-input", rows = "5" })
                            @Html.ValidationMessageFor(model => model.Plan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SurgicalHistory, "Surgical History", htmlAttributes: new { @class = "col-md-12" })

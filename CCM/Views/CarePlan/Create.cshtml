                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Medication, "Medications", htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.Medication, new { @class = "form-control border-input", rows = "5" })

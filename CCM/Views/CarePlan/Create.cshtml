                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Allergy, "Allergies", htmlAttributes: new { @class = "col-md-12" })

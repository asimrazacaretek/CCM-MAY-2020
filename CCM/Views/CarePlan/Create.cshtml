@model CCM.Models.CarePlan

@Html.Action("_CcmActivityLinks", "CcmStatus", new { patientId = Model.PatientId })

<div class="container">
    <h3 class="text-info pageTitle">CARE PLAN NOTES</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.PatientId)
        <input type="hidden" value="@Model.Id" name="Id" />

        <br/>
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-12">Note To Physician (Dr. @ViewBag.PhysicianName)</label>
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.NoteToPhysician, new { @class = "form-control border-input", rows = "5" })
